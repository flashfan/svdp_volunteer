<% provide(:title, "Individual Application Form") %>
<h1>Individual Application Form</h1>
<h2><%=  User.find(@individual_application.user_id).name %></h2>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@individual_application) do |f| %>	  
	<fieldset>
    <legend>Applicant INFORMATION</legend>
	<%= f.label :date_of_birth %>
    <%= f.text_field :date_of_birth, readonly: true %>

    <%= f.label :address %>
    <%= f.text_field :address, readonly: true %>
	<div class="row">
	  <div class="span2">	
        <%= f.label :city %>
        <%= f.text_field :city, readonly: true %>
	  </div>
	  <div class="span2">	
        <%= f.label :state %>
        <%= f.text_field :state, readonly: true %>
	  </div>
	  <div class="span2">
	    <%= f.label :zip_code %>
        <%= f.text_field :zip_code, readonly: true %>
	  </div>
	</div>
	<label for="individual_application_faith">Faith Community</label>
    <%= f.text_field :faith, readonly: true %>
  </fieldset>
  <br />
  <fieldset>
    <legend>EMERGENCY CONTACT INFORMATION</legend>
	<label for="individual_application_emergency_name">Contact Name</label>
    <%= f.text_field :emergency_name, readonly: true %>
	
	<label for="individual_application_emergency_relationship">Relationship to you</label>
    <%= f.text_field :emergency_relationship, readonly: true %>
	
	<label for="individual_application_emergency_phone">Phone</label>
    <%= f.text_field :emergency_phone, readonly: true %>
	
	<label for="individual_application_emergency_email">Email</label>
    <%= f.text_field :emergency_email, readonly: true %>	
  </fieldset>
  <br />
  <fieldset>
    <legend>PERSONAL REFERENCES</legend>
	<label for="individual_application_reference1_name">Family Member Name</label>
	<%= f.text_field :reference1_name, readonly: true  %>
	
	<label for="individual_application_reference1_relationship">Relationship to you</label>
    <%= f.text_field :reference1_relationship, readonly: true  %>
	
	<label for="individual_application_reference1_phone">Phone</label>
    <%= f.text_field :reference1_phone, readonly: true  %>
	
	<label for="individual_application_reference1_email">Email</label>
    <%= f.text_field :reference1_email, readonly: true  %>
	
	<legend></legend>

	<label for="individual_application_reference2_name">Reference Name</label>
	<%= f.text_field :reference2_name, readonly: true  %>
	
	<label for="individual_application_reference2_relationship">Relationship to you</label>
    <%= f.text_field :reference2_relationship, readonly: true  %>
	
	<label for="individual_application_reference2_phone">Phone</label>
    <%= f.text_field :reference2_phone, readonly: true  %>
	
	<label for="individual_application_reference2_email">Email</label>
    <%= f.text_field :reference2_email, readonly: true  %>
	
  </fieldset>
  <br />
  <fieldset>
    <legend>PERSONAL HISTORY</legend>
	<p>Have you ever been convicted of a criminal offense (felony or misdemeanor)? Answer yes if you have 
entered a plea agreement, including a deferred sentence or deferred judgment arrangement in 
connection with a criminal case:</p>
  <% if @individual_application.criminal_history %>
    <p><b> Yes </b></p>
    
  <% else %>
    <p><b> No </b></p>
  <% end %>
  
  <p>Have you ever been dismissed from any volunteer or employment position or been asked to leave at the 
end of your membership in a volunteer, civic or nonprofit organization?</p>
  <% if @individual_application.dismiss_history %>
    <p><b> Yes </b></p>
    
  <% else %>
    <p><b> No </b></p>
  <% end %>
  <% if @individual_application.criminal_history||@individual_application.dismiss_history %>
    <%= f.text_area :explanation, class: "field", rows: 5, readonly: true%>		
  <% end %>
  </fieldset>
	 
    <% end %>
	
	<div class="row">
	  <div class="span2">	
	    <%= link_to "Back", root_path, class: "btn btn-large btn-primary" %>
	  </div>
	  <div class="span2 offset2">
	    <%= link_to "Edit", edit_individual_application_path(@individual_application), class: "btn btn-large btn-primary pull-right" %>
	  </div>
	</div>
	  

    </div>
</div>
