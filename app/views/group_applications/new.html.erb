<% provide(:title, 'Group application') %>
<h1>New Group Application</h1>
<h2><%=  User.find(@group_application.user_id).name %></h2>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group_application) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	  <%= render "#{@group_application.current_step}_step", :f => f %>
      
	  <div class="row">
	    <div class="span2">
          <%= f.submit "Back", class: "btn btn-large btn-primary", :name => "back_button" unless @group_application.first_step? %>
		</div>
		<% if  @group_application.first_step? %>
		  <div class="span2 offset4">
		    <%= f.submit "Continue", class: "btn btn-large btn-primary pull-right" %>
		  </div>
		<% elsif @group_application.last_step? %>
		  <div class="span2 offset2">
		    <%= f.submit "Submit", class: "btn btn-large btn-primary pull-right" %>
		  </div>
		<% else %>
		  <div class="span2 offset2">
		    <%= f.submit "Continue", class: "btn btn-large btn-primary pull-right" %>
		  </div>
		<% end %> 
	  </div>
    <% end %>
  </div>
</div>
